# Variables d'environnement pour la production
# Copiez ce fichier vers .env sur votre VPS

# Base de données PostgreSQL
DATABASE_URL="postgresql://spectacle_user:VOTRE_MOT_DE_PASSE_BDD@localhost:5432/spectacle_saas"

# NextAuth.js
NEXTAUTH_URL="https://votre-domaine.com"
NEXTAUTH_SECRET="votre-secret-super-securise-changez-moi-2024"

# Stripe (remplacez par vos vraies clés)
STRIPE_PUBLISHABLE_KEY="pk_live_votre_cle_publique_stripe"
STRIPE_SECRET_KEY="sk_live_votre_cle_secrete_stripe"
STRIPE_WEBHOOK_SECRET="whsec_votre_webhook_secret_stripe"

# Email SMTP (pour les notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="votre-email@gmail.com"
